{% extends 'base.html.twig' %}

{% block body %}
    <h1>Instruction</h1>

    <table>
        <tbody>
            <tr>
                <th>Idinstruction</th>
                <td>{{ instruction.idInstruction }}</td>
            </tr>
            <tr>
                <th>Nominstruction</th>
                <td>{{ instruction.nomInstruction }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ instruction.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('instruction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('instruction_edit', { 'id': instruction.idInstruction }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
