{% extends 'base.html.twig' %}

{% block title %}Gestion des groupe{% endblock %}
{% block description %}Vous pouvez g√©rer ici les groupes de contact.{% endblock %}

{% block main_content %}
    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-striped" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Nom du Groupe</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for groupe in groupes %}
                    <tr>
                        <td><a href="{{ path('groupe_show', { 'id': groupe.idGroupe }) }}">{{ groupe.nomGroupe }}</a></td>
                        <td><a href="{{ path('groupe_edit', { 'id': groupe.idGroupe }) }}">Modifier</a></td>
                        <td>Supprimer</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('groupe_new') }}">Create a new groupe</a>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
