{% extends 'base.html.twig' %}

{% block title %}Création d'un groupe{% endblock %}
{% block description %}Permet d'enregistrer un nouveau groupe de contact{% endblock %}

{% block main_content %}
    <div class="card">
        <div class="card-body">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.nomGroupe, "Nom du groupe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.nomGroupe) }}
                <div class="col-sm-10">
                    {{ form_widget(form.nomGroupe, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit"  class="btn btn-info btn-lg btn-block" value="Enregistrer ce groupe" />
                </div>
            </div>

            {{ form_end(form) }}

            <a href="{{ path('groupe_index') }}" class="btn btn-info btn-sm">
                <span class="fa fa-reply"></span> Retourner à la liste des groupes
            </a>

        </div>
    </div>
{% endblock %}
