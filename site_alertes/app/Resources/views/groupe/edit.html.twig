{% extends 'base.html.twig' %}

{% set groupe_active = true %}

{% block title %}Modification d'un groupe{% endblock %}
{% block description %}Permet de modifier un groupe de contact{% endblock %}

{% block main_content %}
    <div class="card">
        <div class="card-body">

            {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(edit_form) }}

            <div class="form-group">
                {{ form_label(edit_form.nomGroupe, "Nom du groupe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(edit_form.nomGroupe) }}
                <div class="col-sm-10">
                    {{ form_widget(edit_form.nomGroupe, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit"  class="btn btn-info btn-lg btn-block" value="Modifier ce groupe" />
                </div>
            </div>

            {{ form_end(edit_form) }}

            <ul>
                <li>
                    <a href="{{ path('groupe_index') }}" class="btn btn-info btn-sm">
                        <span class="fa fa-reply"></span> Retourner Ã  la liste des groupes
                    </a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-info btn-sm">
                        <span class="fa fa-times-circle"></span> Supprimer ce groupe
                    </button>
                    {{ form_end(delete_form) }}
                </li>
            </ul>

        </div>
    </div>
{% endblock %}
