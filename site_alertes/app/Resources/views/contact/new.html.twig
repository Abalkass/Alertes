{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contact creation</h1>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_row(form.email) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.adresse) }}
    {{ form_row(form.codePostal) }}
    {{ form_row(form.ville) }}

    <select id="choix-personne">
        <option value="morale">Personne Morale</option>
        <option value="physique">Personne Physique</option>
    </select>

    {{ form_widget(form.organisme, { 'id': 'organisme' }) }}
    {{ form_widget(form.personne, {'id': 'personne' }) }}

    {{ form_widget(form._token) }}

    <input type="submit" value="Create" />
    {{ form_end(form, {'render_rest': false}) }}

    <ul>
        <li>
            <a href="{{ path('personne_index') }}">Back to the list</a>
        </li>
    </ul>

    <script src="{{ asset('bundles/framework/js/jquery-3.1.1.min.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#personne").hide();
            $("#choix-personne").change(function () {
                if ($(this).val() == "morale") {
                    $("#personne").hide();
                    $("#organisme").show();
                } else {
                    $("#personne").show();
                    $("#organisme").hide();
                }
            })
        });
    </script>


{% endblock %}
