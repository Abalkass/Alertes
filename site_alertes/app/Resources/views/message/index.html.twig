{% extends 'base.html.twig' %}

{% set message_active = true %}

{% block title %}Liste des messages{% endblock %}
{% block description %}Vous pouvez gérer ici tous vos messages que vous avez enregistrés.{% endblock %}

{% block main_content %}
    <div class="card">
        <div class="card-body table-responsive">

            <a href="{{ path('app_message_creermessage') }}" class="btn btn-info btn-sm"><span
                        class="fa fa-plus-circle"></span>Créer un nouveau message</a>

            <table id="tableDonnees" class="table table-striped" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Libellé</th>
                    <th>Objet</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                <tr>
                    <td>
                        <a href="{{ path('app_message_affichermessage', {'id':message.id}) }}"> {{ message.libelle }}</a>
                    </td>
                    <td>{{ message.objet }}</td>
                    <td>
                        <a href="{{ path('app_message_majmessage', { 'id':message.id}) }}" type="button" class="btn btn-info btn-xs">
                            <span class="fa fa-refresh"></span> Modifier
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('app_message_delete', { 'id':message.id}) }}" type="button" class="btn btn-info btn-xs">
                            <span class="fa fa-times-circle"></span> Supprimer
                        </a>
                    </td>
                    {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('app_message_creermessage') }}" class="btn btn-info btn-sm"><span
                        class="fa fa-plus-circle"></span>Créer un nouveau message</a>
        </div>
    </div>
{% endblock %}
