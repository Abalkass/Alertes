{% extends 'base.html.twig' %}

{% set message_active = true %}

{% block title %}Modification d'un message{% endblock %}
{% block description %}Permet de créer un nouveau message.{% endblock %}

{% block main_content %}

    <div class="card">
        <div class="card-body">

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.libelle, "Libelle du message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.libelle) }}
                <div class="col-sm-10">
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.objet, "Objet du message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.objet) }}
                <div class="col-sm-10">
                    {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.contenu, "Contenu du message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.contenu) }}
                <div class="col-sm-10">
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'style': 'height:150px;'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-info btn-lg btn-block" value="Enregistrer les modifications"/>
                </div>
            </div>

            {{ form_end(form) }}

            <a href="{{ path('app_message_listermessages') }}" class="btn btn-info btn-sm">
                <span class="fa fa-reply"></span> Retourner à la liste des messages
            </a>
        </div>
    </div>

{% endblock %}
